<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>ç®€æ´æ‰«ç å·¥å…·</title>
    <link href="https://fonts.googleapis.com/css2?family=SF+Pro+Display:wght@400;500&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #007AFF;
            --background: #FFFFFF;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'SF Pro Display', -apple-system, sans-serif;
            -webkit-tap-highlight-color: transparent;
        }

        html, body {
            height: 100%;
            overflow: hidden;
            background: var(--background);
        }

        .container {
            display: flex;
            flex-direction: column;
            height: 100vh;
            padding: 20px;
        }

        /* æ‰«ææ¡†å®¹å™¨ */
        .scanner-window {
            flex: 1;
            background: var(--background);
            border-radius: 24px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

        /* å®é™…æ‰«æåŒºåŸŸ */
        .scan-area {
            width: 280px;
            height: 280px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border: 2px solid var(--primary);
            border-radius: 24px;
            overflow: hidden;
        }

        #preview {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* æ“ä½œåŒºåŸŸ */
        .control-bar {
            padding: 20px 0;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .control-button {
            width: 60px;
            height: 60px;
            border-radius: 30px;
            background: var(--primary);
            border: none;
            color: white;
            font-size: 24px;
            box-shadow: 0 4px 12px rgba(0,122,255,0.3);
        }

        /* ç»“æœé€šçŸ¥ */
        .scan-notice {
            position: fixed;
            top: 60px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0,122,255,0.9);
            color: white;
            padding: 12px 24px;
            border-radius: 24px;
            font-size: 14px;
            opacity: 0;
            transition: opacity 0.3s;
            pointer-events: none;
        }

        /* ç»“æœåˆ—è¡¨é¢æ¿ */
        .result-panel {
            position: fixed;
            bottom: 120px;
            left: 50%;
            transform: translateX(-50%);
            width: 80%;
            max-width: 400px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
            max-height: 50vh;
            overflow-y: auto;
            display: none;
        }

        .result-item {
            padding: 16px;
            border-bottom: 1px solid #F2F2F7;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- æ‰«æçª—å£ -->
        <div class="scanner-window">
            <div class="scan-area">
                <video id="preview" playsinline muted></video>
            </div>
        </div>

        <!-- æ“ä½œæŒ‰é’® -->
        <div class="control-bar">
            <button class="control-button" id="toggleCamera">ğŸ”„</button>
            <button class="control-button" id="resultToggle">ğŸ“‹</button>
        </div>

        <!-- æ‰«æç»“æœæç¤º -->
        <div class="scan-notice" id="scanNotice"></div>

        <!-- ç»“æœåˆ—è¡¨ -->
        <div class="result-panel" id="resultPanel">
            <div id="resultList"></div>
        </div>
    </div>

    <script>
        let state = {
            isScanning: true,
            scanHistory: [],
            currentCamera: 'environment',
            mediaStream: null
        };

        const elements = {
            preview: document.getElementById('preview'),
            scanNotice: document.getElementById('scanNotice'),
            resultPanel: document.getElementById('resultPanel'),
            resultList: document.getElementById('resultList')
        };

        // åˆå§‹åŒ–æ‘„åƒå¤´
        async function initScanner() {
            try {
                state.mediaStream = await navigator.mediaDevices.getUserMedia({
                    video: {
                        facingMode: state.currentCamera,
                        width: { ideal: 800 },
                        height: { ideal: 600 }
                    }
                });
                elements.preview.srcObject = state.mediaStream;
                await elements.preview.play();
                scanFrame();
            } catch (error) {
                showNotice('éœ€è¦æ‘„åƒå¤´æƒé™');
            }
        }

        // æ‰«æå¤„ç†
        function scanFrame() {
            if (!state.isScanning) return;

            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            canvas.width = elements.preview.videoWidth;
            canvas.height = elements.preview.videoHeight;
            
            ctx.drawImage(elements.preview, 0, 0);
            
            // åªè¯†åˆ«æ‰«æåŒºåŸŸå†…å®¹
            const scanRect = {
                x: (canvas.width - 280) / 2,
                y: (canvas.height - 280) / 2,
                width: 280,
                height: 280
            };
            
            const imageData = ctx.getImageData(scanRect.x, scanRect.y, scanRect.width, scanRect.height);
            const code = jsQR(imageData.data, scanRect.width, scanRect.height);

            if (code) handleScan(code.data);
            requestAnimationFrame(scanFrame);
        }

        // å¤„ç†æ‰«æç»“æœ
        function handleScan(data) {
            if (state.scanHistory.some(item => item.data === data)) return;

            state.scanHistory.unshift({
                data: data,
                time: new Date().toLocaleTimeString()
            });

            showNotice(`å·²æ‰«æ: ${data.substring(0, 20)}${data.length > 20 ? '...' : ''}`);
            updateResultList();
        }

        // æ˜¾ç¤ºé¡¶éƒ¨é€šçŸ¥
        function showNotice(text) {
            elements.scanNotice.textContent = text;
            elements.scanNotice.style.opacity = 1;
            setTimeout(() => elements.scanNotice.style.opacity = 0, 2000);
        }

        // æ›´æ–°ç»“æœåˆ—è¡¨
        function updateResultList() {
            elements.resultList.innerHTML = state.scanHistory.map(item => `
                <div class="result-item">
                    <div>${item.data}</div>
                    <small>${item.time}</small>
                </div>
            `).join('');
        }

        // äº‹ä»¶ç»‘å®š
        document.getElementById('toggleCamera').addEventListener('click', async () => {
            state.currentCamera = state.currentCamera === 'user' ? 'environment' : 'user';
            state.mediaStream.getTracks().forEach(track => track.stop());
            await initScanner();
        });

        document.getElementById('resultToggle').addEventListener('click', () => {
            elements.resultPanel.style.display = elements.resultPanel.style.display === 'none' ? 'block' : 'none';
        });

        // å¯åŠ¨æ‰«æ
        initScanner();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/jsqr@1.4.0/dist/jsQR.min.js"></script>
</body>
</html>
